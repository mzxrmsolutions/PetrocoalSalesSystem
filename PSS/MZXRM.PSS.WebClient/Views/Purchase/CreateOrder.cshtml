@using PatrocoalSalesSystem.Models
<section class="content-header">
    <h1>
        Purchases
        <small>Create Purchase Order</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/home"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="/home"><i class="fa fa-dashboard"></i> Purchase</a></li>
        <li class="active">Create PO</li>
    </ol>
</section>

<!-- Main content -->
<section class="content container-fluid">
    <div class="box box-default box-solid collapsed-box">
        <div class="box-header with-border">
            <h3 class="box-title">Purchase Menu</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                    <i class="fa fa-plus"></i>
                </button>
            </div>
            <!-- /.box-tools -->
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="col-lg-6">
                <div class="col-sm-3">
                    <a href="/Purchase" class="btn btn-block btn-primary margin">Purchase Orders</a>
                </div>
                <div class="col-sm-3">
                    <a href="/Purchase/GRNList" class="btn btn-block btn-primary margin">GRNs</a>
                </div>
                <div class="col-sm-3">
                    <a href="/Purchase/GRNList?type=loan" class="btn btn-block btn-primary margin">Loan</a>
                </div>
                <div class="col-sm-3">
                    <a href="/Purchase/DCLList" class="btn btn-block btn-primary margin">Duty Clear</a>
                </div>
                <div class="col-sm-3">
                    <a href="/Purchase/CreateOrder" class="btn btn-block btn-primary margin">Create PO</a>
                </div>
                <div class="col-sm-3">
                    <a href="/Purchase/CreateGRN" class="btn btn-block btn-primary margin">Create GRN</a>
                </div>
                <div class="col-sm-3">
                    <a href="/Purchase/CreateGRN?type=loan" class="btn btn-block btn-primary margin">Create LRN</a>
                </div>
                <div class="col-sm-3">
                    <a href="/Purchase/CreateDCL" class="btn btn-block btn-primary margin">Create DCL</a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="col-sm-3">
                    <a href="/Purchase" class="btn btn-block btn-info margin">Purchase Orders</a>
                </div>

            </div>
        </div>
        <!-- /.box-body -->
    </div>
    <div class="box box-warning box-solid">
        <div class="box-header with-border">
            <h3 class="box-title">New Purchase Order</h3>
        </div>
        <form method="post" action="/purchase/createorder">
            <!-- /.box-header -->
            <div class="box-body">
                <div class="row">
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>Origin</label>
                            <select class="form-control" name="Origin">
                                <option value="0">--- Origin ---</option>
                                @foreach (Item item in Common.Origin)
                                {
                                    <option value="@item.Index">@item.Value</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>Size</label>
                            <select class="form-control" name="Size">
                                <option value="0">--- Size ---</option>
                                @foreach (Item item in Common.Size)
                                {
                                    <option value="@item.Index">@item.Value</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>Vessel</label>
                            <select class="form-control" name="Vessel">
                                <option value="0">--- Vessel ---</option>
                                @foreach (Item item in Common.Vessel)
                                {
                                    <option value="@item.Index">@item.Value</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>PO Date:</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" class="form-control pull-right" data-selector="date" name="PODate" value="@DateTime.Now.ToShortDateString()">
                            </div>
                            <!-- /.input group -->
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>Target Days</label>
                            <input type="text" class="form-control" name="TargetDays">
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>Supplier</label>
                            <select class="form-control" name="Supplier">
                                <option>--- Supplier ---</option>
                                @foreach (Item item in Common.Supplier)
                                {
                                    <option value="@item.Index">@item.Value</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>Lead</label>
                            <select class="form-control" name="Lead">
                                <option>--- Lead ---</option>
                                @foreach (User item in UserUtil.Users)
                                {
                                    <option value="@item.Id" @(item.Id==Common.CurrentUser.Id?" selected ":"")>@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label>Terms of Payments</label>
                            <input type="text" class="form-control" name="PaymentTerms">
                        </div>
                    </div>
                    @*<div class="col-sm-1 pull-right">
                            <a href="#" class="btn btn-success pull-right">+</a>
                        </div>*@
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <table class="table table-condensed">
                            <tbody>
                                <tr>
                                    <th>Customer</th>
                                    <th>Quantity</th>
                                    <th>Rate</th>
                                    <th>Allowed Wastage</th>
                                    <th>Cost Per Ton</th>
                                    <th>Target Date</th>
                                    <th></th>
                                </tr>
                                @for (int i = 1; i <= 10; i++)
                                {
                                    <tr id="row_@i.ToString()" style="display:none">
                                        <td>
                                            <select class="form-control" name='Customer_@i.ToString()' id='Customer_@i.ToString()' onchange="showRow(@i.ToString())">
                                                <option value="0">--- Customer ---</option>
                                                @foreach (Customer item in CustomerUtil.Customers)
                                                {
                                                    <option value="@item.Id">@item.Name</option>
                                                }
                                            </select>
                                        </td>
                                        <td><input type="text" class="form-control" name="Quantity_@i.ToString()" /></td>
                                        <td><input type="text" class="form-control" name="Rate_@i.ToString()" /></td>
                                        <td><input type="text" class="form-control" name="AllowedWastage_@i.ToString()" /></td>
                                        <td><input type="text" class="form-control" name="CostPerTon_@i.ToString()" /></td>
                                        <td>
                                            <div class="input-group date">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-calendar"></i>
                                                </div>
                                                <input type="text" class="form-control pull-right" data-selector="date" name="TargetDate_@i.ToString()">
                                            </div>
                                        </td>
                                        <th><a href="#" class="btn btn-danger" onclick="hideRow(@i.ToString())">X</a></th>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <div class="col-sm-3">
                    <button type="submit" class="btn btn-primary" name="btn" value="Save">Save</button>
                    <button type="reset" class="btn btn-danger" name="btn" value="Reset">Reset</button>
                </div>
            </div>
        </form>
    </div>
</section>
@section scripts
{
    <script>

        $('input[data-selector=date]').datepicker({
            autoclose: true
        });
        showRow(1);
        function showRow(i)
        {
            if(i==10)
                alert('Max 10 rows');
            if(i==1)
                $('#row_'+i).show();
            //debugger;
            var v=0;
            v=parseInt(i);
            v++;
            var option=  $('#Customer_'+i+' option:selected').val();
            if(option==0)
                $('#row_'+v).hide();
            else
                $('#row_'+v).show();
        }
        function hideRow(i)
        {
            $('#Customer_'+i).val("0");
            $('#row_'+i).hide();
        }
    </script>
}

