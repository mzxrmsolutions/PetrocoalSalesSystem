            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <div class="col-sm-3">
                <a href="/purchase/updateorder" class="btn btn-primary">Update PO</a>
                <a href="/purchase/approvedorder" class="btn btn-primary">Approve PO</a>
            </div>

        </div>
    </div>
    <!-- /.box -->

</section>
