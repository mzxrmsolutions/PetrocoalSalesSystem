@using MZXRM.PSS.Data
@using MZXRM.PSS.Business
<section class="content-header">
    <h1>
        Sales
        <small>Create Sale Order</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/home"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="/SaleOrder"><i class="fa fa-dashboard"></i> Sale</a></li>
        <li class="active">Create SO</li>
    </ol>
</section>

<!-- Main content -->
<section class="content container-fluid">
    <div class="box box-default box-solid collapsed-box">
        <div class="box-header with-border">
            <h3 class="box-title">Sales Menu</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                    <i class="fa fa-plus"></i>
                </button>
            </div>
            <!-- /.box-tools -->
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="col-lg-6">
                <div class="col-sm-3">
                    <a href="/SaleOrder" class="btn btn-block btn-primary margin">Sale Orders</a>
                </div>
                <div class="col-sm-3">
                    <a href="/SaleOrder/DOList" class="btn btn-block btn-primary margin">Deliery Orders</a>
                </div>
                <div class="col-sm-3">
                    <a href="/SaleOrder/LoanList" class="btn btn-block btn-primary margin">Loan Orders</a>
                </div>
                <div class="col-sm-3">
                    <a href="/SaleOrder/DCList" class="btn btn-block btn-primary margin">Delivery Chalans</a>
                </div>
                <div class="col-sm-3">
                    <a href="/SaleOrder/CreateOrder" class="btn btn-block btn-primary margin">Create SO</a>
                </div>
                <div class="col-sm-3">
                    <a href="/SaleOrder/CreateDO" class="btn btn-block btn-primary margin">Create DO</a>
                </div>
                <div class="col-sm-3">
                    <a href="/SaleOrder/CreateLO" class="btn btn-block btn-primary margin">Create LO</a>
                </div>
                <div class="col-sm-3">
                    <a href="/SaleOrder/CreateDC" class="btn btn-block btn-primary margin">Create DC</a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="col-sm-3">
                    <a href="/Sales" class="btn btn-block btn-info margin">Sale Orders Report</a>
                </div>

            </div>
        </div>
        <!-- /.box-body -->
    </div>
    <div class="box box-warning box-solid">
        <div class="box-header with-border">
            <h3 class="box-title">New Sale Order</h3>
        </div>
        <form method="post" action="/SaleOrder/CreateOrder">
            <!-- /.box-header -->
            <div class="box-body">
                <div class="row">
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>Order Type</label>
                            <select class="form-control" name="Origin">
                                <option value="0">Commercial</option>
                                <option value="1">LC</option>
                                <option value="2">Loan</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>Origin</label>
                            <select class="form-control" name="Origin">
                                <option value="0">--- Origin ---</option>
                                @foreach (Item item in Common.Origin)
                                {
                                    <option value="@item.Index">@item.Value</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>Size</label>
                            <select class="form-control" name="Size">
                                <option value="0">--- Size ---</option>
                                @foreach (Item item in Common.Size)
                                {
                                    <option value="@item.Index">@item.Value</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>Vessel</label>
                            <select class="form-control" name="Vessel">
                                <option value="0">--- Vessel ---</option>
                                @foreach (Item item in Common.Vessel)
                                {
                                    <option value="@item.Index">@item.Value</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>SO Date:</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" class="form-control pull-right" data-selector="date" name="SODate" value="@DateTime.Now.ToShortDateString()">
                            </div>
                            <!-- /.input group -->
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>SO Expiry:</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" class="form-control pull-right" data-selector="date" name="SOExpiry" value="@DateTime.Now.ToShortDateString()">
                            </div>
                            <!-- /.input group -->
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>Customer</label>
                            <select class="form-control" name='Customer'>
                                <option value="0">--- Customer ---</option>
                                @foreach (Customer item in CustomerManager.AllCustomers)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>

                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>Party PO Number</label>
                            <input type="text" class="form-control" name="PONumber">
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>Party PO Date:</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" class="form-control pull-right" data-selector="date" name="SODate" value="@DateTime.Now.ToShortDateString()">
                            </div>
                            <!-- /.input group -->
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>Party PO Expiry:</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" class="form-control pull-right" data-selector="date" name="SOExpiry" value="@DateTime.Now.ToShortDateString()">
                            </div>
                            <!-- /.input group -->
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>Credit Period</label>
                            <input type="text" class="form-control" name="CreditPeriod">
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>Quantity</label>
                            <input type="text" class="form-control" name="Quantity">
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>Agreed Rate</label>
                            <input type="text" class="form-control" name="Rate">
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>Agreed Tax Rate</label>
                            <select class="form-control" name="Lead">
                                <option>--- No Tax ---</option>
                                @foreach (Item item in Common.TaxRate)
                                {
                                    <option value="@item.Index">@item.Value</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>Trader</label>
                            <select class="form-control" name="Lead">
                                <option>--- Trader ---</option>
                                @foreach (Item item in Common.Trader)
                                {
                                    <option value="@item.Index" >@item.Value</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>Trader Commission</label>
                            <input type="text" class="form-control" name="TraderCommission">
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>Lead</label>
                            <select class="form-control" name="Lead">
                                <option>--- Lead ---</option>
                                @foreach (User item in UserUtil.Users)
                                {
                                    <option value="@item.Id" @(item.Id==Common.CurrentUser.Id?" selected ":"")>@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <label>PO Scanned Copy</label>
                        <div class="form-group">
                            <input type="file" id="CustomerPO" />
                        </div>
                    </div>
                    @*<div class="col-sm-1 pull-right">
                            <a href="#" class="btn btn-success pull-right">+</a>
                        </div>*@
                </div>
                
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <div class="col-sm-3">
                    <button type="submit" class="btn btn-primary" name="btn" value="Save">Save</button>
                    <button type="reset" class="btn btn-danger" name="btn" value="Reset">Reset</button>
                </div>
            </div>
        </form>
    </div>
</section>
@section scripts
{
    <script>

        $('input[data-selector=date]').datepicker({
            autoclose: true
        });
    </script>
}

