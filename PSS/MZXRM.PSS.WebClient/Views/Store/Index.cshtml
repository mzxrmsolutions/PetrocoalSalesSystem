@using MZXRM.PSS.Data
@using MZXRM.PSS.Business
@using MZXRM.PSS.Common

@{List<Store> FilteredStores = ViewBag.Stores;}

<section class="content-header">
    <h1>
        Stock
        <small>Master Stock Status</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/home"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Stock</li>
    </ol>
</section>

<!-- Main content -->
<section class="content container-fluid">
    @if (ExceptionHandler.HasException())
    {
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <h4><i class="icon fa fa-ban"></i> Alert!</h4>
            @ExceptionHandler.GetExceptionMessage()
        </div>
        { ExceptionHandler.CloseException(); }
    }
    <div class="box box-default box-solid">
        <div class="box-header with-border">
            <h3 class="box-title">Stores</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
            <!-- /.box-tools -->
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="box">
                <div class="box-body no-padding">
                    <table class="table table-condensed">
                        <tbody>
                            <tr>
                                <th>Store</th>
                                <th>Origin</th>
                                <th>Vessel</th>
                                <th>Size</th>
                                <th>Quantity</th>
                                <th>Total</th>
                            </tr>
                            @foreach (Store store in FilteredStores)
                            {
                                <tr>
                                    <td><a href="/Store/StoreDetail/@store.Id">@store.Name</a></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td><span class="badge bg-green">@store.TotalStock.ToString(Constants.QuantityFormat)</span></td>
                                </tr>
                                foreach (CustomerStock stock in store.Stock)
                                {
                                    <tr>
                                        <td></td>
                                        <td>@stock.Origin.Value</td>
                                        <td>@stock.Vessel.Value</td>
                                        <td>@stock.Size.Value</td>
                                        <td>@stock.Quantity.ToString(Constants.QuantityFormat)</td>
                                        <td></td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
        <!-- /.box-body -->
    </div>

