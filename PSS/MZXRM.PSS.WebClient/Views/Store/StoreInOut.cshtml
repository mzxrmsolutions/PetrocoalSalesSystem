@using MZXRM.PSS.Data
@using MZXRM.PSS.Business
@using MZXRM.PSS.Common

<section class="content-header">
    <h1>
        Store In/Out
        <small>Store to Store stock movement</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/home"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="/stock"><i class="fa fa-dashboard"></i> Stock</a></li>
        <li class="active">Store In/Out</li>
    </ol>
</section>

<!-- Main content -->
<section class="content container-fluid">
    <form method="post" action="/purchase/createdcl">
        @if (ExceptionHandler.HasException())
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <h4><i class="icon fa fa-ban"></i> Alert!</h4>
                @ExceptionHandler.GetExceptionMessage()
            </div>
            { ExceptionHandler.CloseException(); }
        }
        <div class="box box-default box-solid">
            <!-- /.box-header -->
            <div class="box-body">
                <div class="col-lg-6">
                    <button type="submit" class="btn btn-sm btn-primary" name="btn" value="Save"><i class="fa fa-floppy-o"></i> Save</button>
                    <button type="reset" class="btn btn-sm btn-default" name="btn" value="Reset"><i class="fa fa-refresh"></i> Reset</button>
                </div>
                <div class="col-lg-6">
                    <a href="/Purchase" class="btn btn-sm btn-default"><i class="fa fa-list"></i> My POs List</a>
                    <a href="/Purchase/GRNList" class="btn btn-sm btn-default"><i class="fa fa-list"></i> My GRNs List</a>
                    <a href="/Purchase/DCLList" class="btn btn-sm btn-default"><i class="fa fa-list"></i> My DCLs List</a>
                    <a href="/Purchase/GRNList?type=loan" class="btn btn-sm btn-default" disabled><i class="fa fa-list"></i> My LRNs List</a>
                </div>
            </div>
            <!-- /.box-body -->
        </div>
        <div class="box box-warning box-solid">
            <div class="box-header with-border">
                <h3 class="box-title">New Store Movement</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="row">
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>From Store</label>
                            <select class="form-control select2" name="FromStore">
                                <option value="0">--- From Store ---</option>
                                @foreach (Store store in StoreManager.AllStore)
                                {
                                    <option value="@store.Id" )>@store.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>Date:</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" class="form-control pull-right" data-selector="date" name="Date" value="@DateTime.Now.ToShortDateString()">
                            </div>
                            <!-- /.input group -->
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label>Customer</label>
                            <select class="form-control select2" name="Customer">
                                <option value="0">--- Customer ---</option>
                                @foreach (Customer customer in CustomerManager.AllCustomers)
                                {
                                    <option value="@customer.Id" )>@customer.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-1">
                        <div class="form-group">
                            <label>Origin</label>
                            <select class="form-control select2" name="Origin">
                                <option value="0">--- Origin ---</option>
                                @foreach (Item Origin in Common.Origin)
                                {
                                    <option value="@Origin.Index" )>@Origin.Value</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-1">
                        <div class="form-group">
                            <label>Vessel</label>
                            <select class="form-control select2" name="Vessel">
                                <option value="0">--- Vessel ---</option>
                                @foreach (Item Vessel in Common.Vessel)
                                {
                                    <option value="@Vessel.Index" )>@Vessel.Value</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-1">
                        <div class="form-group">
                            <label>Size</label>
                            <select class="form-control select2" name="Size">
                                <option value="0">--- Size ---</option>
                                @foreach (Item Size in Common.Size)
                                {
                                    <option value="@Size.Index" )>@Size.Value</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>Quantity</label>
                            <input type="text" class="form-control" name="Quantity" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>To Store</label>
                            <select class="form-control select2" name="ToStore">
                                <option value="0">--- To Store ---</option>
                                @foreach (Store store in StoreManager.AllStore)
                                {
                                    <option value="@store.Id" )>@store.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>Vehicle No</label>
                            <input type="text" class="form-control" name="VehicleNo" />
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>Bilty No</label>
                            <input type="text" class="form-control" name="BiltyNo" />
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>Bilty Date:</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" class="form-control pull-right" data-selector="date" name="BiltyDate" value="@DateTime.Now.ToShortDateString()">
                            </div>
                            <!-- /.input group -->
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>Invoice</label>
                            <input type="text" class="form-control" name="Invoice" />
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>CCM</label>
                            <input type="text" class="form-control" name="CCMNo" />
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>Transporter</label>
                            <select class="form-control" name="ToStore">
                                <option value="0">--- Transporter ---</option>
                                @foreach (Item trader in Common.Trader)
                                {
                                    <option value="@trader.Index" )>@trader.Value</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label>Remarks</label>
                            <input type="text" class="form-control" name="Remarks">
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
            </div>
        </div>
    </form>
    <!-- /.box -->
    <div class="box box-primary box-solid">
        <div class="box-header with-border">
            <h3 class="box-title">Stock Movement History</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="box box-default collapsed-box">
                <div class="box-header with-border">
                    <h3 class="box-title">Options</h3>

                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="download"><i class="fa fa-download"></i></button>
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i></button>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="col-md-3">
                        <div class="form-group">
                            <select class="form-control">
                                <option>--From Store--</option>
                                <option>KPT</option>
                                <option>Hawks bay</option>
                                <option>New Godown</option>
                                <option>New Godown 2</option>
                                <option>Groney Yard</option>
                                <option>Port Qasim</option>
                                <option>Wazir Mention</option>
                                <option>Train/transit</option>
                                <option>CCM</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <input type="text" class="form-control" id="input" placeholder="Vessel">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <select class="form-control">
                                <option>--To Store--</option>
                                <option>KPT</option>
                                <option>Hawks bay</option>
                                <option>New Godown</option>
                                <option>New Godown 2</option>
                                <option>Groney Yard</option>
                                <option>Port Qasim</option>
                                <option>Wazir Mention</option>
                                <option>Train/transit</option>
                                <option>CCM</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <input type="text" class="form-control" id="input" placeholder="Transporter">
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <table class="table table-condensed">
                <tbody>
