@using MZXRM.PSS.Data
@using MZXRM.PSS.Business
@using MZXRM.PSS.Common
<section class="content-header">
    <h1>
        Customers
        <small>Manage your customers here</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/home"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="/Customer"><i class="fa fa-users"></i> Customer</a></li>
        <li class="active">Create Customer</li>
    </ol>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <form method="post" action="/Customer/CreateCustomer">
        @if (ExceptionHandler.HasException())
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <h4><i class="icon fa fa-ban"></i> Alert!</h4>
                @ExceptionHandler.GetExceptionMessage()
            </div>
            { ExceptionHandler.CloseException(); }
        }
        <div class="box box-default box-solid">
            <!-- /.box-header -->
            <div class="box-body">
                <div class="col-lg-6">
                    <button type="submit" class="btn btn-sm btn-primary" name="btn" value="Save"><i class="fa fa-floppy-o"></i> Save</button>
                    <button type="reset" class="btn btn-sm btn-default" name="btn" value="Reset"><i class="fa fa-refresh"></i> Reset</button>
                </div>
                <div class="col-lg-6">
                    <a href="/Customer" class="btn btn-sm btn-default"><i class="fa fa-list"></i> Customers </a>
                    <a href="/Customer?s=all" class="btn btn-sm btn-default"><i class="fa fa-list"></i> All Customers </a>
                    <a href="/Customer/Download" class="btn btn-sm btn-default bg-purple pull-right" disabled><i class="fa fa-file-excel-o"></i> Export Excel</a>
                </div>
            </div>
            <!-- /.box-body -->
        </div>
        <div class="box box-warning box-solid">
            <div class="box-header with-border">
                <h3 class="box-title">New Customer</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="col-sm-2">
                    <div class="form-group">
                        <label>Full Name</label>
                        <input type="text" class="form-control" name="FullName">
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group">
                        <label>Short Name</label>
                        <input type="text" class="form-control" name="ShortName">
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group">
                        <label>NTN</label>
                        <input type="text" class="form-control" name="NTN">
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group">
                        <label>STRN</label>
                        <input type="text" class="form-control" name="STRN">
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label>Address</label>
                        <input type="text" class="form-control" name="Address">
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label>Invoice Address</label>
                        <input type="text" class="form-control" name="InvoiceAddress">
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control" name="Email">
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group">
                        <label>Phone</label>
                        <input type="text" class="form-control" name="Phone">
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group">
                        <label>Contact Person</label>
                        <input type="text" class="form-control" name="ContactPerson">
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group">
                        <label>Head Office</label>
                        <input type="text" class="form-control" name="HeadOffice">
                    </div>
                </div>
                <div class="col-sm-12">

                    <div class="form-group">
                        <label>Remarks</label>
                        <input type="text" class="form-control" name="Remarks" />
                    </div>
                </div>

                <input type="button" class="btn btn-sm btn-default" id="somebutton" value="Add New Address" />
                <input type="text" name="TotalDestinations" id="TotalDestinations" value="0"  hidden/>
                <div class="col-sm-12" id="container"></div>
            </div>
        </div>
        <!-- /.box-body -->
    </form>
</section>
@section scripts
{
    <script>

        $('input[data-selector=date]').datepicker({
            autoclose: true
        });

        $(document).ready(function () {
            var addredd = 0;
        });

        $("#somebutton").click(function () {
            var counter = $('#TotalDestinations').val();
            counter++;
            $('#TotalDestinations').val(counter);
            $("#container").append('<div class= "form-group" ><label>New Address</label><input type="text" class="form-control" name=' + counter +' /></div >');
        });
    </script>

}
